generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  createdAt DateTime  @default(now())
  updateAt  DateTime
  email     String    @unique
  password  String
  userName  String?
  role      UserRole
  Avatar    Avatar?
  comments  Comment[]
  posts     Posting[]
}

model Comment {
  id        String   @id
  comment   String
  userId    String
  timestamp DateTime @default(now())
  postingId String
  Posting   Posting  @relation(fields: [postingId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Posting {
  id          String     @id
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  title       String
  content     String?
  userId      String
  gameTitle   String
  thumbnailId String     @unique
  Comment     Comment[]
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  Thumbnail   Thumbnail?
}

model Avatar {
  id             String @id
  userId         String @unique
  avatarImgURL   String
  avatarFileName String
  User           User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Thumbnail {
  id                String  @id
  postingId         String  @unique
  imageURL          String
  thumbnailFileName String
  Posting           Posting @relation(fields: [postingId], references: [id], onDelete: Cascade)
}

enum UserRole {
  ADMIN
  USER
}
